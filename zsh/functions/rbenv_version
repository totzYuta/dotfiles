#! bin/zsh

# Ruby version of rbenv
rbenv_version () {
  if [[ "`rbenv version | grep '.rbenv/version'`" = "" ]];then
    if [[ "`rbenv version | grep 'RBENV_VERSION'`" = "" ]];then
      local setting="L"
    else
      local setting="V"
    fi
  else
    local setting="G"
  fi
  RPROMPT="â˜•  `rbenv version | cut -f1 -d' '`($setting)"
}
